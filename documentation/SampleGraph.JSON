	},
	'entry':{
		'nodeID': 9877,   			// integer
		'nodeType': 'N',  			// 'N' stands for eNtry
		'parentCluster': 45678, 	// points to the nodeID of root
		'downstream': []  			// array of nodeID numbers
	},
	'exit':{
		'nodeID': 9877,     		// integer
		'nodeType': 'X',  			// 'X' stands for eXit
		'parentCluster': 45678 	// points to the nodeID of root
		'upstream': [],   			// array of nodeID numbers
	},
	'nodes': [								// array of node objects.
		{
			'name': 'Integrate O-auth',
